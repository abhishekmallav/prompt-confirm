{
  "manifest_version": 3,
  "name": "Prompt Confirm",
  "version": "1.0",
  "description": "Confirm prompt before sending to ChatGPT. Prevents accidental submissions when you meant to add a new line.",
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}

